{
  "name": "ekandreas/slk",
  "type": "project",
  "description": "Bedrock with Divi",
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wp-premium/gravityforms",
        "version": "2.2.3",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/wp-premium/gravityforms/archive/master.zip"
        }
      }
    }
  ],
  "require": {
    "php": ">=7",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "*",
    "johnpbloch/wordpress": "*",
    "oscarotero/env": "*",
    "roots/wp-password-bcrypt": "*",
    "wp-premium/gravityforms": "*",
    "wpackagist-plugin/varnish-http-purge": "*",
    "wpackagist-plugin/autodescription": "*"
  },
  "require-dev": {
    "deployer/deployer": "*"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs --ignore=web/wp/,vendor/ -n -s ."
    ]
  }
}
